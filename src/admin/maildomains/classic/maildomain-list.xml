<?xml version="1.0" encoding="UTF-8"?>

<list>
  <definition>
    <departmentBrowser>true</departmentBrowser>
    <departmentRootVisible>false</departmentRootVisible>
    <baseMode>true</baseMode>
    <multiSelect>true</multiSelect>
    <template>maildomain-list.tpl</template>
    <module>maildomain</module>
    <label>List of Mail Domains</label>
    <defaultSortColumn>1</defaultSortColumn>

    <objectType>
      <label>Mail domain</label>
      <objectClass>domainRelatedObject</objectClass>
      <category>maildomains</category>
      <class>maildomain</class>
      <image>plugins/departments/images/domain.png</image>
    </objectType>

  </definition>

  <table>
    <layout>|20px;c|||100px;r|130px;r|</layout>

    <department>
      <value>%{filter:objectType(dn,objectClass)}</value>
    </department>

    <department>
      <value>%{filter:departmentLink(row,dn,description)}</value>
      <span>2</span>
    </department>

    <column>
      <value>%{filter:objectType(dn,objectClass)}</value>
    </column>

    <column>
      <label>Mail Domain</label>
      <sortAttribute>ou</sortAttribute>
      <sortType>string</sortType>
      <value>%{filter:link(row,dn,"%s",ou)}</value>
      <export>true</export>
    </column>

    <column>
      <label>Description</label>
      <sortAttribute>description</sortAttribute>
      <sortType>string</sortType>
      <value>%{filter:link(row,dn,"%s",description)}</value>
      <export>true</export>
    </column>

    <column>
      <label>Categories</label>
      <value>%{filter:maildomainCategories(dn,ou)}</value>
    </column>

    <column>
      <label>#Aliases</label>
      <value>%{filter:maildomainUsageCounter(dn,ou)}</value>
    </column>

    <column>
      <label>Actions</label>
      <value>%{filter:actions(dn,row,objectClass)}</value>
    </column>

  </table>

  <actionmenu>

    <action>
     <type>sub</type>
     <image>images/lists/element.png[new]</image>
     <label>Create</label>

     <action>
      <name>new</name>
      <type>entry</type>
      <image>plugins/departments/images/domain.png[new]</image>
      <label>Mail Domain</label>
     </action>
    </action>

    <action>
      <type>separator</type>
    </action>

    <action>
      <name>edit</name>
      <type>entry</type>
      <image>images/lists/edit.png</image>
      <label>Edit</label>
    </action>

    <action>
      <name>remove</name>
      <type>entry</type>
      <image>images/lists/trash.png</image>
      <label>Remove</label>
    </action>

    <action>
      <type>separator</type>
    </action>

    <action>
      <type>exporter</type>
    </action>

    <action>
      <type>separator</type>
    </action>

    <action>
      <type>snapshot</type>
    </action>

  </actionmenu>

  <actiontriggers snapshot="true" copypaste="false">

    <action>
      <name>edit</name>
      <type>entry</type>
      <image>images/lists/edit.png</image>
      <label>Edit mail domain</label>
    </action>

    <action>
      <name>snapshot</name>
      <type>snapshot</type>
    </action>

    <action>
      <name>remove</name>
      <type>entry</type>
      <image>images/lists/trash.png</image>
      <acl>maildomains/maildomain[d]</acl>
      <label>Remove mail domain</label>
    </action>

  </actiontriggers>

</list>
